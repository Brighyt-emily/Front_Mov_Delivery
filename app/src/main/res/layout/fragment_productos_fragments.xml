<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProductosFragments">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Productos"
            android:gravity="left"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewListaProductosProductos"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="362dp"
                android:layout_height="69dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImgViewProductoProductos"
                    android:layout_width="100dp"
                    android:layout_height="68dp"
                    android:layout_gravity="left"
                    android:layout_margin="4dp"
                    android:src="@drawable/comida3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/img_resolver"
                        android:text="Pollo A la Brasa"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Descripción"
                        android:textSize="10dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="$12.30"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"

                    android:paddingLeft="20dp"/>
                <Button
                    android:id="@+id/BtnMasProductos"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:background="#03DAC5"
                    android:text="+">
                </Button>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

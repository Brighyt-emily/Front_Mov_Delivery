<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.OfertasFragments">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="233dp">
            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselDescubreOfertas"
                android:layout_width="match_parent"
                android:layout_height="233dp"
                app:fillColor="#009688"
                app:pageColor="#FFFFFF"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="#009688"
                app:strokeWidth="1dp" ></com.synnapps.carouselview.CarouselView>
        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Lista de Tiendas:"
            android:gravity="left"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/CardOfertasOfertas"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:elevation="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/TextVNombreTiendaOfertas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tienda 1"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    />
                <TextView
                    android:id="@+id/TextVDescripcionOfertas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Buscar entre todos los temas" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"
        android:elevation="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tienda 1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Buscar entre todos los temas" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
